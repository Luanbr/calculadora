<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="335dp"
        android:layout_height="137dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.259">

        <TextView
            android:id="@+id/txtExpression"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:gravity="right"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="342dp"
        android:layout_height="382dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent">

        <!-- Seven  -> percent%-->
        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_seven"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="@string/_7" />

            <Button
                android:id="@+id/btn_eight"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="@string/_8" />

            <Button
                android:id="@+id/btn_nine"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="@string/_9" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="@string/add" />

            <Button
                android:id="@+id/btn_percent"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="@string/percent" />
        </TableRow>

        <!-- Four -> xY -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_four"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="@string/_4" />

            <Button
                android:id="@+id/btn_five"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="@string/_5" />

            <Button
                android:id="@+id/btn_six"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="@string/_6" />

            <Button
                android:id="@+id/btn_subtract"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="@string/subtract" />

            <Button
                android:id="@+id/btn_elevate"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="@string/elevate" />
        </TableRow>

        <!--One -> Factorial -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_one"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="@string/_1" />

            <Button
                android:id="@+id/btn_two"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="@string/_2" />

            <Button
                android:id="@+id/btn_three"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="@string/_3" />

            <Button
                android:id="@+id/btn_multiplication"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="@string/times" />

            <Button
                android:id="@+id/btn_factorial"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="@string/factorial" />
        </TableRow>

        <!--.  -> (SIN - TAN)-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_point"
                android:layout_width="65dp"
                android:layout_height="104dp"
                android:text="@string/point" />

            <Button
                android:id="@+id/btn_zero"
                android:layout_width="65dp"
                android:layout_height="105dp"
                android:text="@string/_0" />

            <Button
                android:id="@+id/btn_result"
                android:layout_width="65dp"
                android:layout_height="105dp"
                android:text="@string/equals" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_division"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="@string/division" />

                <Button
                    android:id="@+id/btn_cosine"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:text="@string/cosine" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_sine"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="@string/sine" />

                <Button
                    android:id="@+id/btn_tangent"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tangent" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_send"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="@string/enviar" />

            <Button
                android:id="@+id/btn_negate"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="+/-" />

            <Button
                android:id="@+id/btn_clean"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="@string/clean" />

            <Button
                android:id="@+id/btn_square_root"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="@string/square_root" />

        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>